all
{
        %CC sm src/*.c
}

movcc
{
        %SET CC movcc
        %CC sm src/*.c
}

clean
{
        !rm -f sm
}

install root (all)
{
        !cp -f sm /usr/local/bin/sm
}

debug
{
        %SET CFLAGS -Og -Wall -pedantic -Wextra -fsanitize=address -fsanitize=leak -fsanitize=undefined -ansi
        %CC sm src/*.c
}
